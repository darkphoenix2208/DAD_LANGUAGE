{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Dad Lang",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.dadlang",
                    "match": "\\b(idhar aao|jao padhai karo|agar sharam hai|nahi to bhai|warna belt|jab tak main na bolu|jab main tumhari umar ka tha|bas ho gaya|rishtedaar_aaye|muh_dikhai|bache_kuche)\\b"
                },
                {
                    "name": "storage.type.dadlang",
                    "match": "\\b(ye sambhal|parampara|khandaan)\\b"
                },
                {
                    "name": "support.function.dadlang",
                    "match": "\\b(jawab de|bas paanch minute|kismat|tol_mol|taarik_pe_taarik)\\b"
                },
                {
                    "name": "constant.language.dadlang",
                    "match": "\\b(sahi|galat|nalla)\\b"
                },
                {
                    "name": "keyword.other.new.dadlang",
                    "match": "\\b(avtaar)\\b"
                },
                {
                    "name": "variable.language.this.dadlang",
                    "match": "\\b(khud)\\b"
                },
                {
                    "name": "storage.type.function.dadlang",
                    "match": "\\b(sanskar)\\b"
                },
                {
                    "name": "keyword.other.dadlang",
                    "match": "\\b(ka_khoon_hai|dheere_dheere|ruko_zara)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.comparison.dadlang",
                    "match": "\\b(se behtar hai|se bekar hai)\\b"
                },
                {
                    "name": "keyword.operator.dadlang",
                    "match": "(==|!=|<=|>=|<|>|\\+|-|\\*|/|%|=|\\+=|-=|\\*=|/=)"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.dadlang",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.dadlang",
                    "match": "\\\\."
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.dadlang",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.dadlang",
                    "match": "(chugli:|//).*$"
                }
            ]
        }
    },
    "scopeName": "source.dadlang"
}